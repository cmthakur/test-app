<%= link_to 'Add New List', new_user_list_path(@user), :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Tasks</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.id %></td>
        <td><%= list.name %></td>
        <td><%= link_to list.tasks.count, user_list_tasks_path(@user, list) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

